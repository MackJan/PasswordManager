{
  "id": null,
  "uid": null,
  "title": "Password Manager Dashboard",
  "tags": ["django", "password-manager"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "label": "Datasource",
        "query": "loki",
        "current": {},
        "options": [],
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "User Login Activity - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", level=\"INFO\"} |= \"Successful login\" [$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 11,
      "title": "User Login Activity - Log Messages",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", level=\"INFO\"} |= \"Successful login\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 }
    },
    {
      "id": 2,
      "title": "Failed Login Attempts - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", level=\"WARNING\"} |= \"Login failed\" [$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 12,
      "title": "Failed Login Attempts - Log Messages",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", level=\"WARNING\"} |= \"Login failed\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 4 }
    },
    {
      "id": 3,
      "title": "Vault Activity - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", module=\"vault\"} [$__range]))"
