    {
      "id": 14,
      "title": "Critical Alerts - Log Messages",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", level=\"ERROR\"}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 4 }
    },
    {
      "id": 5,
      "title": "Login Activity Over Time",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by () (count_over_time({job=\"django\", level=\"INFO\"} |= \"Successful login\" [5m]))",
          "legendFormat": "Successful Logins"
        },
        {
          "refId": "B",
          "expr": "sum by () (count_over_time({job=\"django\", level=\"WARNING\"} |= \"Login failed\" [5m]))",
          "legendFormat": "Failed Logins"
        }
      ],
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 6,
      "title": "All Security Events (Combined Log View)",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\"} |~ \"(security|unauthorized|failed|Login failed|Successful login|vault)\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 7,
      "title": "User Registration Activity",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by () (count_over_time({job=\"django\", level=\"INFO\"} |= \"New user registered\" [1h]))",
          "legendFormat": "New Registrations"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "id": 8,
      "title": "Password Vault Operations",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by () (count_over_time({job=\"django\", module=\"vault\"} |= \"created vault item\" [5m]))",
          "legendFormat": "Items Created"
        },
        {
          "refId": "B",
          "expr": "sum by () (count_over_time({job=\"django\", module=\"vault\"} |= \"updated vault item\" [5m]))",
          "legendFormat": "Items Updated"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    }
  ]
}
