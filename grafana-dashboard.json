      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", module=\"vault\"}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 4 }
    },
    {
