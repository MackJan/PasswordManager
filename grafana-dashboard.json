{
  "id": null,
  "uid": null,
  "title": "Password Manager Security Dashboard",
  "tags": ["django", "password-manager", "security"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "label": "Loki Datasource",
        "query": "loki",
        "current": {},
        "options": [],
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "User Login Activity - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", level=\"INFO\"} |= \"Successful login\" [$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 11,
      "title": "User Login Activity - Recent Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", level=\"INFO\"} |= \"Successful login\" | json | line_format \"{{.timestamp}} [{{.ip}}] User {{.user_id}}: {{.message}}\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 4 }
    },
    {
      "id": 2,
      "title": "Failed Login Attempts - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", level=\"WARNING\"} |= \"Login failed\" [$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 12,
      "title": "Failed Login Attempts - Security Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", level=\"WARNING\"} |= \"Login failed\" | json | line_format \"{{.timestamp}} [{{.ip}}] Failed login attempt: {{.message}}\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 4 }
    },
    {
      "id": 3,
      "title": "Vault Activity - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", module=\"vault\"} [$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "blue", "value": 10 },
              { "color": "purple", "value": 50 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
    },
    {
      "id": 13,
      "title": "Vault Activity - Operation Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", module=\"vault\"} | json | line_format \"{{.timestamp}} [{{.ip}}] User {{.user_id}}: {{.message}}\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 4 }
    },
    {
      "id": 4,
      "title": "Critical Alerts - Count",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"django\", level=\"ERROR\"} [$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
    },
    {
      "id": 14,
      "title": "Critical Alerts - Error Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"django\", level=\"ERROR\"} | json | line_format \"{{.timestamp}} [{{.ip}}] CRITICAL: {{.message}}\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 4 }
    },
    {
      "id": 5,
      "title": "Login Activity Timeline",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({job=\"django\", level=\"INFO\"} |= \"Successful login\" [5m]))",
          "legendFormat": "Successful Logins"
        },
        {
          "refId": "B",
          "expr": "sum(rate({job=\"django\", level=\"WARNING\"} |= \"Login failed\" [5m]))",
          "legendFormat": "Failed Logins"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 }
    },
    {
      "id": 6,
      "title": "Top IP Addresses (Failed Logins)",
      "type": "table",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (ip) (count_over_time({job=\"django\", level=\"WARNING\"} |= \"Login failed\" | json [$__range])))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 12 }
    },
    {
      "id": 7,
      "title": "User Activity Heatmap",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (user_id) (rate({job=\"django\", module=\"vault\"} | json [5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "continuous-GrYlRd" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 18 }
    }
  ]
}
